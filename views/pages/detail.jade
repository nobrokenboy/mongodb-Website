extends  ../layout
block content
   .container
      .row
            .col-md-7
               embed(src="#{movies.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="center",
               type="application/x-shockwave-flash")
            .col-md-5
               dl.dl-horizontal
                  dt 电影名字
                  dd= movies.title
                  dt 导演
                  dd= movies.doctor
                  dt 国家
                  dd= movies.country
                  dt 语音
                  dd= movies.language
                  dt 上映年份
                  dd= movies.year
                  dt 简介
                  dd= movies.summary
